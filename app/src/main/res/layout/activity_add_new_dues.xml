<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sally_000.mybudgapplication.AddNewDues">

    <EditText
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:hint="Title"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:id="@+id/payer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:hint="Payer"

        android:layout_marginTop="47dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:id="@+id/amount"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Amount Due"
        android:inputType="number"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" />
    <TextView
        android:id="@+id/names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Members:Check Applicable Boxes"

        android:singleLine="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/amount" />
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:hint="@string/submit_group"
        android:layout_gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/submit"
        android:onClick="returnToList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:hint="Members"
        android:layout_gravity="bottom"
        android:id="@+id/members"
        android:backgroundTint="@color/background_floating_material_dark"
        android:onClick="memberCheckboxing"
        android:layout_below="@+id/names"
        android:layout_alignRight="@+id/amount"
        android:layout_alignEnd="@+id/amount" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/hiiii"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/members" />


</RelativeLayout>
